@using MvcBigBank.Controllers
@model TypeHolder

@{
    ViewBag.Title = "Kredi Başvurusu";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<TypeHolder> lister = new List<TypeHolder>();
    List<TypeHolder> lister2 = new List<TypeHolder>();
    TypeHolder one = new TypeHolder();
    TypeHolder two = new TypeHolder();
    one.homeState = 1;
    one.phoneState = 1;
    one.name = "Var";

    two.name = "Yok";
    two.homeState = 0;
    two.phoneState = 0;
    lister.Add(one);
    lister.Add(two);

    IEnumerable<System.Web.Mvc.SelectListItem> list = new SelectList(lister,"phoneState","name");
    IEnumerable<System.Web.Mvc.SelectListItem> list2 = new SelectList(lister,"homeState","name");



}



<div>
    <div>
        <section class="panel" style="margin-left:40px; margin-top:90px">
            <header class="panel-heading" style="text-align:center;">
                KREDİ SORGULA
            </header>
            <div class="panel-body" style="text-align:center; vertical-align:middle; align-items:center; justify-content:center">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()


                    <div class="form-group">
                        <div style="display:inline;">
                            @Html.TextBoxFor(model => model.age, new { @placeholder = " Lütfen Yaşınızı Giriniz", @style = "border: none; border-bottom: 1px solid #f05056; width:250px; margin-top:10px;", maxlength = "2", @onkeypress = "return event.charCode >=48 && event.charCode <=57" })
                            @Html.ValidationMessageFor(model => model.age, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group">
                        <div style="display:inline;">
                            @Html.TextBoxFor(model => model.creditCount, new { @placeholder = " Lütfen Aldığınız Kredi Sayısını Giriniz", @style = "border: none; border-bottom: 1px solid #f05056; width:250px; margin-top:10px;", maxlength = "2", @onkeypress = "return event.charCode >=48 && event.charCode <=57" })
                            @Html.ValidationMessageFor(model => model.creditCount, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group">
                        <div style="display:inline;">
                            @Html.TextBoxFor(model => model.creditSize, new { @placeholder = " Lütfen Kredi Miktarını Giriniz", @style = "border: none; border-bottom: 1px solid #f05056; width:250px; margin-top:10px;", maxlength = "6", @onkeypress = "return event.charCode >=48 && event.charCode <=57" })
                            @Html.ValidationMessageFor(model => model.creditSize, "", new { @class = "text-danger" })
                        </div>
                    </div>





                    <div class="form-group">
                        <div class="row justify-content-center">
                            <div class="col-xs-6 col-xs-offset-4" style="margin-top:20px; ">
                                @Html.DropDownListFor(model => model.phoneState, list, "Lütfen Telefon Durumunu Seçiniz", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.phoneState, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="row justify-content-center">
                            <div class="col-xs-6 col-xs-offset-4" style="margin-top:20px; ">
                                @Html.DropDownListFor(model => model.homeState, list2, "Lütfen Ev Durumunu Seçiniz", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.homeState, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="row justify-content-center">
                            <div class="col-xs-6 col-xs-offset-4" style="margin-top:20px; ">
                                <input type="submit" value="SORGULA" class="btn btn-info btn-xs btn-block" style="font-size:large; background-color:#004e95 " />
                            </div>

                        </div>
                    </div>
                }
            </div>
        </section>
        @if (ViewBag.Message != null)
        {
            <script type="text/javascript">
                    window.onload = function () {
                        alert("@ViewBag.Message")
                    }
            </script>
        }
    </div>
</div>
