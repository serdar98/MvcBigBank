@using MvcBigBank.Models
@model tbl_fatura

@{
    ViewBag.Title = "Fatura Tutar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <section class="panel" style="margin-left:40px; margin-top:90px">
        <header class="panel-heading" style=" height:30px; text-align:center;">

            <h4 style="text-align:center; ">PARA ÇEKME</h4>
        </header>
        <div class="panel-body" style="text-align:center; vertical-align:middle; align-items:center; justify-content:center">
            @using (Html.BeginForm("ShowTheBill", "Payment", FormMethod.Post, new { @id = "frmShowTheBill" }))
            {
                @Html.AntiForgeryToken()

                
                    <div class="form-group">
                        <div>
                            <label>Güncel Fatura Tutarınız </label>
                            <div>
                                <p>@ViewBag.value</p>
                            </div>
                        </div>
                    


                    <div class="form-group">
                        <div>
                            <label>Son Ödeme Tarihiniz </label>
                            <div>
                                <p>@ViewBag.Message</p>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-xs-6 col-xs-offset-4" style="right:60px;">
                            @*<input type="submit" value="Para Çekme" class="btn btn-primary btn-xs btn-block" style="font-size:large; " />*@
                            <a href="/Payment/SendingPayment" class="btn btn-info btn-xs btn-block " style="font-size:large; background-color:#004e95 ">Ödeme Yapılacak Hesap Seç</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>